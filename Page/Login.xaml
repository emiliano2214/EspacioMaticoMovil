<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EspacioMaticoMovil.Page.Login"
             Title="Login"
             BackgroundColor="#D1DAFD">
    <VerticalStackLayout>
        <Image
            Source="logo5.png"
            Margin="0,20,10,90"
            />
        
        <Label 
            Text="Usuario"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry
            Placeholder="Inserte Usuario"
            x:Name="UsuarioEntry"/>
       
        <Label 
            Text="Contraseña"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry 
            Placeholder="INGRESE CONTRASEÑA"
            x:Name="ContraseñaEntry" 
            IsPassword="True"/>

        <Button
            Text="Entrar"
            Clicked="Button_Clicked"
            />

    </VerticalStackLayout>
</ContentPage>