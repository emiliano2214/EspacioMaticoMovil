<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EspacioMaticoMovil.Page.Login"
             Title="Login">
    <VerticalStackLayout>
        <Image
            Source="dotnet_bot.png"
            />
        <Label 
            Text="Este es el login del programa"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Margin="0,100, 0, 0"/>

        <Label 
            Text="Usuario"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry 
            Text="Inserte Usuario"
            x:Name="UsuarioEntry"/>

        <Label 
            Text="Contraseña"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry 
            Text="Inserte Contraseña"
            x:Name="ContraseñaEntry" 
            IsPassword="True"/>

        <Button
            Text="Entrar"
            Clicked="Button_Clicked"
            />

    </VerticalStackLayout>
</ContentPage>